<!DOCTYPE html>
<html>
  <head>
    <title>Angaadi</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <img src="/images/logo.png" alt="Logo" style="width:50%; display:block; margin:2% auto 0 auto;">
     <div class="header clearfix">
       <nav>
         <ul class="nav nav-justified">
           {{#if user}}
           <li role="presentation"><a href="/">Dashboard</a></li>
           <li role="presentation"><a href="/users/logout">logout</a></li>
           {{else}}
           <li role="presentation"><a href="/farmers/loginFarmer">Login</a></li>
           <li role="presentation"><a href="/farmers/newFarmer">Join Angaadi</a></li>
           {{/if}}
         </ul>
       </nav>
     </div>



     <div class="row">
       <div class="col-lg-12">
         {{#if success_msg}}
           <div class="alert alert-success">{{success_msg}}</div>
         {{/if}}

         {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
         {{/if}}

         {{#if error}}
           <div class="alert alert-danger">{{error}}</div>
         {{/if}}
        {{{body}}}
       </div>


     </div>

     <footer class="footer">
       <p>&copy; 2018 Angaadi, Inc.</p>
     </footer>

   </div> <!-- /container -->
   <script src="/js/script.js" charset="utf-8"></script>
  </body>
</html>
